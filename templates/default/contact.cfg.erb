<%
  countries = {
    "FR" => Proc.new {|n| 
      "%d%s" % [33, n]
    }
  }

  countries.default = Proc.new{ |n|
    n
  }
%>

define contact{
        use                                     tmpl-generic
        contact_name                            <%= @user[:id] %>
        alias                                   <%= @user[:name] %>
        email                                   <%= @user[:mail] %>

<% if @user[:pager] && @user[:oncall] %>
        pager                                   <%= countries[@user[:pager][:country]].call(@user[:pager][:number]) %>
<% end %>
}
