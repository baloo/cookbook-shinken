# This file is dropped off by chef, any local changes will be overwritten

define hostgroup {
<% if not @register %>
  name                          <%= @hostgroup_key %>
<% end %>

<% if not @hostgroup_name.nil? %>
  hostgroup_name                <%= @hostgroup_name %>
<% end %>
<% if not @hostgroup_alias.nil? %>
  alias                         <%= @hostgroup_alias %>
<% end %>
<% if not @notes.nil? %>
  notes                         <%= @notes %>
<% end %>
<% if not @notes_url.nil? %>
  notes_url                     <%= @notes_url %>
<% end %>
<% if not @action_url.nil? %>
  action_url                    <%= @action_url %>
<% end %>
<% if not @realm.nil? %>
  realm                         <%= @realm %>
<% end %>

  members

  register                      <%= @register ? "1": "0" %>
<% if @use %>
  use      <%= @use.join(",") %>
<% end %>
}

